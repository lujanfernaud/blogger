<% if current_page?(root_path) %>

	<!-- Visible only in XS to resize header image -->

	<header class="visible-xs intro-header">
		<div class="featured-header-xs" <%= show_image_if_exists(@latest_article, :small) %>>
			<div class="container">
				<div class="row">

					<div class="latest-article-tab" aria-hidden="true">
						<p>Latest article</p>
					</div>

				</div><!-- /.row -->
			</div><!-- /.container -->
		</div><!-- /.featured-header-xs -->

		<div class="container-fluid container-index-xs">
			<div class="row">

				<div class="latest-article-container-xs">
					<div class="sr-only">
						<p>Latest article</p>
					</div>
					<div class="site-heading">
						<h2 class="h1"><%= link_to @latest_article.title, article_path(@latest_article) %></h2>
						<span class="meta">by <%= link_to @latest_article.author.username, author_path(@latest_article.author) %> on <%= @latest_article.created_at.strftime('%b %d, %Y') %></span>
					</div>
				</div>

			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</header>

	<!-- Visible only in SM and MD to resize header image -->

	<header class="visible-sm visible-md intro-header featured-header" <%= show_image_if_exists(@latest_article, :medium) %>>
		<div class="container container-index full-height">
			<div class="row full-height">
				<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 full-height">
					<div class="row full-height">

						<div class="latest-article-container">
							<div class="latest-article">
								<p>Latest article</p>
							</div>
							<div class="site-heading">
								<h2 class="h1"><%= link_to @latest_article.title, article_path(@latest_article) %></h2>
								<span class="meta">by <%= link_to @latest_article.author.username, author_path(@latest_article.author) %> on <%= @latest_article.created_at.strftime('%b %d, %Y') %></span>
							</div>
						</div>

					</div><!-- /.row full-height -->
				</div><!-- /.col-* -->
			</div><!-- /.row full-height -->
		</div><!-- /.container-index full-height -->
	</header>

	<!-- Hidden in XS, SM, and MD to resize header image -->

	<header class="hidden-xs hidden-sm hidden-md intro-header featured-header" <%= show_image_if_exists(@latest_article, :large) %>>
		<div class="container container-index full-height">
			<div class="row full-height">
				<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 full-height">
					<div class="row full-height">

						<div class="latest-article-container">
							<div class="latest-article">
								<p>Latest article</p>
							</div>
							<div class="site-heading">
								<h2 class="h1"><%= link_to @latest_article.title, article_path(@latest_article) %></h2>
								<span class="meta">by <%= link_to @latest_article.author.username, author_path(@latest_article.author) %> on <%= @latest_article.created_at.strftime('%b %d, %Y') %></span>
							</div>
						</div>

					</div><!-- /.row full-height -->
				</div><!-- /.col-* -->
			</div><!-- /.row full-height -->
		</div><!-- /.container-index full-height -->
	</header>

<% elsif controller.controller_name == 'articles' && controller.action_name == 'show' %>

	<!-- Hidden in XS -->

	<header class="hidden-xs header-container">
		<div class="cover-image" <%= show_image_if_exists(@article, :large) %>></div>
		<div class="intro-header post-header">
			<div class="container">
				<div class="row">
					<div class="col-lg-10 col-lg-offset-1 col-xs-12">

						<div class="row">
							<div class="row-fa">
								<a href="#article">
									<i class="fa fa-chevron-down fa-inverse fa-2x" aria-hidden="true"></i>
								</a>
							</div>
						</div>

						<div class="post-heading">
							<h1><%= @article.title %></h1>
							<span class="meta">by <%= link_to @article.author.username, author_path(@article.author) %> on <%= @article.created_at.strftime('%b %d, %Y') %></span>
						</div>

					</div><!-- /.col-* -->
				</div><!-- /.row -->
			</div><!-- /.container -->
		</div><!-- /.intro-header post-header -->
	</header>

	<!-- Visible only in XS -->

	<header class="visible-xs intro-header">
		<div class="post-header-xs">
			<div class="cover-image" <%= show_image_if_exists(@article, :large) %>></div>
			<div class="row">

				<div class="row-fa">
					<a href="#article">
						<i class="fa fa-chevron-down fa-inverse fa-2x" aria-hidden="true"></i>
					</a>
				</div>

			</div><!-- /.row -->
		</div><!-- /.post-header-xs -->

		<div class="container-fluid container-index-xs">
			<div class="row">

				<div class="post-heading post-heading-xs col-xs-10 col-xs-offset-1">
					<h1><%= link_to @article.title, article_path(@article) %></h1>
					<span class="meta">by <%= link_to @article.author.username, author_path(@article.author) %> on <%= @article.created_at.strftime('%b %d, %Y') %></span>
				</div>

			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</header>

<% else %>

	<header class="intro-header section-header">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

					<div class="page-heading">
						<h1><%= @title || "Section" %></h1>
					</div>

				</div><!-- /.col-* -->
			</div><!-- /.row -->
		</div><!-- /.container -->
	</header>

<% end %>
