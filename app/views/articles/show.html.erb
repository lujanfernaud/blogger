<%= render 'shared/shim' %>
<%= render 'shared/navigation' %>
<%= render 'shared/header' %>

<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-xs-10 col-xs-offset-1">

        <div class="row">
        	<div class="col-xs-12 article-container">

            <hr class="hr-small hr-article-heading">
  					<p><%= sanitize @article.body %></p>
  					<p>
  						Tags:
  						<% @article.tags.each do |tag| %>
  							<%= link_to tag.name, tag_path(tag) %>
  						<% end %>
  					</p>

  					<% if logged_in? and is_owner? %>
  						<%= link_to "Edit", edit_article_path(@article) %> | 
  						<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"} %>
  					<% end %>

    			</div>
        </div>

      </div><!-- col-* -->
    </div><!-- row -->
  </div><!-- container -->
</article>

<section class="section-comments">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-xs-10 col-xs-offset-1">

        <div class="row">
        	<div class="col-xs-12 comments-container">

  					<% if @article.comments.size != 0 %>
  						<div class="comments">
  							<h3 class="h2 h2-comments"><%= pluralize(@article.comments.size, 'Comment') %></h3>
  							<%= render partial: 'articles/comment', collection: @article.comments %>
  						</div>
  					<% end %>
  					<%= render partial: 'comments/form' %>

          </div>
        </div>

      </div><!-- col-* -->
    </div><!-- row -->
  </div><!-- container -->
</section>

<%= render 'shared/footer' %>
