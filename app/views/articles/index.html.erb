<%= link_to image_tag("feed-icon-14x14.png"), articles_url(format: "rss") %>

<% content_for :head, auto_discovery_link_tag(:rss, articles_url) %>

<h1>All Articles</h1>

<ul id="articles">
	<% @articles.each do |article| %>
		<li>
			<%= link_to article.title, article_path(article) %>
		</li>
	<% end %>
</ul>

<% if logged_in? %>
	<%= link_to "Create a New Article", new_article_path, class: "new_article" %>
<% end %>

<br>
<%= link_to 'Most Popular Articles', popular_path %> | <%= link_to 'Archive', archive_index_path %>
