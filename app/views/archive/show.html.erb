<%= render 'shared/shim' %>
<%= render 'shared/navigation' %>
<%= render 'shared/header' %>

<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 
                      col-sm-12 col-xs-12">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 section-background">

      <% if @sort_by_year %>
          <br>
          <h2><%= @year %></h2>
          <% @articles_by_year_and_month.each do |month, articles| %>
            <h3><%= link_to month, archive_path([@year, month]) %></h3>
              <ul>
                <% articles.each do |article| %>
                  <li><%= link_to article.title, article_path(article) %></li>
                <% end %>
              </ul>
        <% end %>

      <% else %>
        <br>
        <h2><%= link_to @year, archive_path(@year) %></h2>
        <h3><%= @month %></h3>
        <% @articles_by_month.each do |article| %>
          <ul>
            <li><%= link_to article.title, article_path(article) %></li>
          </ul>
        <% end %>
        </table>
      <% end %>

      <br>
      <%= link_to 'Go back to archive index', archive_index_path %> | 
      <%= link_to 'Go back to articles list', articles_path %>

      </div>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>
