<%= render 'shared/shim' %>
<%= render 'shared/navigation' %>
<%= render 'shared/header' %>

<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 
                  col-sm-12 col-xs-12">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 archive-container">

      <% @articles_by_year_and_month.each do |year, month| %>
        <h2 class="h1 h1-archive"><%= link_to year, archive_path(year) %></h2>
          <% month.each do |month, articles| %>
            <% articles.each do |article| %>
              <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-ms-2 col-xs-12 col-date">
                  <div class="image-background" <%= show_image_if_exists(article) %>></div>
                  <div class="color-overlay"></div>
                  <div class="text-overlay">
                    <p><%= article.created_at.strftime('%b %d') %></p>
                  </div>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10 col-ms-10 col-xs-12 col-article post-preview">
                  <h2 class="post-title"><%= link_to article.title, article_path(article) %></h2>
                  <p class="post-meta">by <%= link_to article.author.username, author_path(article.author) %></p>
                </div>
              </div>
              <hr class="hr-popular">
            <% end %>
          <% end %>
      <% end %>

      </div>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>
