<h1>Archive</h1>

<!-- <%= @articles_by_year_and_month.inspect %> -->

<% @articles_by_year_and_month.each do |year, month| %>
  <br>
  <h2><%= link_to year, archive_path(year) %></h2>
    <h3><%= link_to month.keys[0], archive_path(month.keys[0]) %></h3>
      <% month.values.each do |articles| %>
        <ul>
          <% articles.each do |article| %>
            <li><%= link_to article.title, article_path(article) %></li>
          <% end %>
        </ul>
      <% end %>
<% end %>

<br>
<%= link_to 'Articles List', articles_path %>
