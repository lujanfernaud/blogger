<%= render 'shared/shim' %>
<%= render 'shared/navigation' %>
<%= render 'shared/header' %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-xs-10 col-xs-offset-1">

      <div class="row">
        <div class="col-xs-12 section-container">

        <div class="row">
          <div class="text-center">
            <p id="notice"><%= notice %></p>
          </div>
        </div>

        <table class="table" id="authors">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

          <tbody class="table-striped">
            <% @authors.each do |author| %>
              <tr>
                <td><%= author.username %></td>
                <td><%= author.email %></td>
                <td><%= link_to 'Show', author %></td>
                <td><%= link_to 'Edit', edit_author_path(author) %></td>
                <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="row v-offset-30">
          <div class="text-center">
            <%= link_to 'New Author', new_author_path %>
          </div>
        </div>

        </div>
      </div>

    </div>
  </div>
</div>

<%= render 'shared/footer' %>
