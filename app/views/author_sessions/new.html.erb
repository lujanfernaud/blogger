<%= render 'shared/shim' %>
<%= render 'shared/navigation' %>
<%= render 'shared/header' %>

<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 
                  col-sm-12 col-xs-12">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 sections-background">

			<% if flash.notice %>
    		<div class="alert alert-danger"><%= flash.notice %></div>
    	<% end %>

			<%= form_tag author_sessions_path, method: :post do %>
				<div class="row">
					<div class="form-group col-xs-12">
						<%= label_tag :email %>
						<%= text_field_tag :email %>
					</div>
				</div>

				<div class="row">
					<div class="form-group col-xs-12">
					<%= label_tag :password %>
					<%= password_field_tag :password %>
				</div>
				</div>
				
				<div class="row">
					<div class="form-group col-xs-12">
					<%= submit_tag 'Login' %>
					</div>
				</div>
			<% end %>

			<%= link_to 'Back', articles_path %>

			</div>
    </div>
  </div>
</div>

<br>

<%= render 'shared/footer' %>
