<%= render 'shared/shim' %>
<%= render 'shared/navigation' %>
<%= render 'shared/header' %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-xs-10 col-xs-offset-1">

      <div class="row">
        <div class="col-xs-12 section-container">

          <ul id="tags" class="list-unstyled text-center">
            <% @tags.each do |tag| %>
            	<li>
                #<%= link_to tag.name.capitalize_all_words, tag_path(tag) %>
                <% if logged_in? %>
                  (<%= link_to "Delete tag", tag_path(tag), method: :delete, data: {confirm: "Really delete the '#{tag.name}' tag?"} %>)
                <% end %>
              </li>
            <% end %>
          </ul>

          <div class="row">
            <div class="container-bottom-links text-center">
              <p><%= link_to "Articles List", articles_path %></p>
            </div>
          </div>

        </div><!-- section-container -->
      </div><!-- row -->

    </div>
  </div>
</div>

<%= render 'shared/footer' %>
